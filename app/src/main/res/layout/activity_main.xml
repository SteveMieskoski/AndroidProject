<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.androidproject.MainActivity">

    <EditText
        android:id="@+id/ticker_search_txt"
        android:layout_width="219dp"
        android:layout_height="59dp"
        android:hint="Enter Ticker"
        android:inputType="text|textCapCharacters"
        app:layout_constraintBottom_toTopOf="@+id/ticker_search_btn"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.19999999"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/ticker_search_btn"
        android:layout_width="222dp"
        android:text="Search"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ticker_search_txt" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ticker_search_txt"
        android:layout_marginTop="0dp" />

    <TextView
        android:id="@+id/search_error"
        android:layout_width="302dp"
        android:layout_height="19dp"
        android:text="@string/search_error"
        android:textAlignment="center"
        android:textColor="@color/errorColor"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="48dp" />


</android.support.constraint.ConstraintLayout>
